generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String        @id @default(uuid())
  title        String
  description  String
  objectives   String[]
  timeline     Json
  studentCount Int
  resources    String[]
  interestArea String[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userId       String? 
  user         user?         @relation(fields: [userId], references: [id])
  applications Application[]
}

model Application {
  id                       String         @id @default(uuid())
  summary                  String
  resumePath               String?
  status                   ApplicationStatusType         @default(APPLICATION_WAITING)
  comment                  String?
  responseProfessorMessage String?
  projectId                String
  Project                  Project        @relation(fields: [projectId], references: [id])
  userId                   String 
  user                     user           @relation(fields: [userId], references: [id])
  Notification             Notification[]

  @@unique([userId, projectId])
}

enum ApplicationStatusType {
  APPLICATION_WAITING
  APPLICATION_ACCEPTED
  APPLICATION_REFUSED
}

model Notification {
  id            String           @id @default(uuid()) 
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  type          NotificationType
  message       String
  read          Boolean          @default(false)
  applicationId String?
  Application   Application?     @relation(fields: [applicationId], references: [id])
  user          user?            @relation(fields: [userId], references: [id])
  userId        String?
}

enum NotificationType {
  APPLICATION_SUBMITTED
  APPLICATION_UPDATED
}

model user {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          UserRole
  description   String?
  resume        String?
  notifications Notification[]
  applications  Application[] 
  projects      Project[]
}

enum UserRole {
  STUDENT
  TEACHER
}
